<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity
        name="WWII\Domain\Erp\QualityControl\GeneralInspection\PackagingInspection"
        table="qc_general_inspection_packaging_inspection">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field
            name="tanggalInspeksi"
            column="tanggal_inspeksi"
            type="date" />

        <field
            name="lokasi"
            column="lokasi"
            type="string" />

        <field
            name="staffQc"
            column="staff_qc"
            type="string" />

        <one-to-many
            field="packagingInspectionTime"
            target-entity="WWII\Domain\Erp\QualityControl\GeneralInspection\PackagingInspectionTime"
            mapped-by="packagingInspection"
            orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
            <order-by>
                <order-by-field name="waktuInspeksi" direction="ASC" />
            </order-by>
        </one-to-many>

    </entity>
</doctrine-mapping>

