<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="WWII\Domain\Erp\ItInventory\Peripheral" table="inv_peripheral">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field
            name="nama"
            column="nama"
            type="string"
            length="50" />

        <field
            name="nomorSeri"
            column="no_seri"
            type="string"
            length="100" />

        <field
            name="brand"
            column="brand"
            type="string"
            length="100" />

        <field
            name="type"
            column="type"
            type="string"
            length="100" />

        <field
            name="port"
            column="port"
            type="string"
            length="50"
            nullable="true" />

        <field
            name="userAccount"
            column="user_account"
            type="string"
            length="50"
            nulable="true" />

        <field
            name="lokasi"
            column="lokasi"
            type="string"
            length="100" />

    </entity>
</doctrine-mapping>
